{
	"name": "crazytown",
	"version": "1.0.0",
	"description": "Mad libs mafia party game",
	"author": "Eric Peterson",
	"private": true,
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^1.13.0",
		"@typescript-eslint/parser": "^1.13.0",
		"babel-eslint": "^10.0.2",
		"eslint": "5.x",
		"eslint-config-react-app": "^4.0.1",
		"eslint-plugin-flowtype": "2.x",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.14.3",
		"eslint-plugin-react-hooks": "^1.6.1",
		"lerna": "^3.15.0",
		"prettier": "^1.18.2",
		"typescript": "^3.5.3"
	},
	"scripts": {
		"clean": "lerna clean",
		"start": "lerna run --scope ui-* --scope host-socketio --parallel start",
		"lint": "eslint --ext .js,.jsx,.ts,.tsx packages/*/src",
		"test": "CI=true lerna run --stream test"
	},
	"workspaces": [
		"packages/*"
	],
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"trailingComma": "all"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"packages/*/src/**/*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"git add"
		]
	}
}
